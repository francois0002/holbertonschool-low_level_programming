CC = gcc
SRC = .c
OBJ = .o
NAME = school
RM = rm -f


school : main$(OBJ) school$(OBJ)
	$(CC) -o school main$(OBJ) school$(OBJ)
	
main$(OBJ) : main$(SRC) m.h
	$(CC) -o main$(OBJ) -c main$(SRC)
	
school$(OBJ) : school$(SRC) m.h
	$(CC) -o school$(OBJ) -c school$(SRC)
	
all : $(NAME)

clean :
	$(RM) $(OBJ)
    
oclean :
	$(RM) $(OBJ)

fclean :
	$(RM) *~ $(NAME)
	$(RM) $(OBJ)
	
re :
	$(RM) $(OBJ) all
